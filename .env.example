# Environment Variables for Playwright Automation Framework
# Copy this file to .env for local development
# In CI/GitHub Actions, these are set as repository variables/secrets

# Base URL for the application under test
BASE_URL=https://demowebshop.tricentis.com

# API URL (if different from base URL)
API_URL=https://demowebshop.tricentis.com

# Browser configuration
HEADLESS=true
SLOW_MO=0

# Test execution configuration
WORKERS=4
RETRIES=2

# Test user credentials
TEST_EMAIL=testuser@example.com
TEST_PASSWORD=TestPassword123!
TEST_FIRST_NAME=John
TEST_LAST_NAME=Doe

# Faker configuration
ENABLE_FAKER_SEED=true
FAKER_SEED=12345

# CI/CD flag (automatically set by GitHub Actions)
CI=true